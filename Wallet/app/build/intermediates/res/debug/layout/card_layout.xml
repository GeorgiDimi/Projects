<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:background="@drawable/shape"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:minHeight="150dp"
            android:id="@+id/relLay">

            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@drawable/roundcontainer"
                android:layout_height="50dp"
                android:id="@+id/shaded">

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/cardName"
                android:textSize="20sp"
                android:id="@+id/cardName"
                android:layout_marginLeft="30dp"
                android:layout_marginStart="30dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="#000000"
                android:layout_marginTop="14dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/cardLine1"
                android:textSize="15sp"
                android:id="@+id/cardE1"
                android:layout_alignTop="@+id/cardName"
                android:layout_alignLeft="@+id/cardName"
                android:layout_alignStart="@+id/cardName"
                android:layout_marginLeft="5dp"
                android:textColor="#ff363636"
                android:layout_marginStart="5dp"
                android:layout_marginTop="50dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/cardLine2"
                android:textSize="15sp"
                android:id="@+id/cardE2"
                android:layout_marginTop="20dp"
                android:textColor="#ff363636"
                android:layout_alignTop="@+id/cardE1"
                android:layout_alignLeft="@+id/cardE1"
                android:layout_alignStart="@+id/cardE1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/cardLine1_1"
                android:textSize="15sp"
                android:id="@+id/cardE1_1"
                android:textColor="#ff363636"
                android:layout_alignBottom="@+id/cardE1"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp"  />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/cardLine2_2"
                android:textSize="15sp"
                android:id="@+id/cardE2_1"
                android:textColor="#ff363636"
                android:layout_alignBottom="@+id/cardE2"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_marginEnd="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/cardNumber"
                android:textSize="15sp"
                android:id="@+id/cardNumber"
                android:textColor="#ff363636"
                android:layout_marginLeft="15dp"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="15dp"
                android:layout_alignParentBottom="true"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cardImage1"
                android:maxHeight="100dp"
                android:maxWidth="100dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true" />

        </RelativeLayout>
</LinearLayout><!-- From: file:/Users/georgidimitrov/AndroidstudioProjects/Wallet/app/src/main/res/layout/card_layout.xml -->